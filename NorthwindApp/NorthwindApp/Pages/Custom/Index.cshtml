@page
@model NorthwindApp.Pages.Custom.IndexModel

@{
    Layout = "Shared/_Layout";
}
<div class="container">
    <!-- Order table -->
    <div class="row">
        <div class="col">
            <div class="form-group">
                <label>Name</label>
                <label>@Model.Person.Name</label>
            </div>

            <div class="form-group">
                <label>Id</label>
                <label>@Model.Person.Id</label>
            </div>
        </div>
        <div class="col">
        </div>
    </div>
    <div class="row">
        <div class="col">
            <table>
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Description</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model.Person.Address)
                {
                    <tr>s
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>